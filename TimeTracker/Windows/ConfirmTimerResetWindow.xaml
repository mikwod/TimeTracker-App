<Window x:Class="TimeTracker.ConfirmTimerResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker"
        mc:Ignorable="d"
        Title="Alert!" Height="100" Width="300">
    <StackPanel Margin="5">
        <TextBlock Name="txtQuestion" Text="Are you sure you wish to reset the timer?" Margin="0"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="Yes" IsDefault="True" Margin="5" Name="btnYes" Click="btnYes_Click" />
            <Button Content="No" IsCancel="True" Margin="5" Name="btnNo" Click="btnNo_Click" />
        </StackPanel>
    </StackPanel>
</Window>
