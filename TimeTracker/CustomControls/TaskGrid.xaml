<UserControl x:Class="TimeTracker.TaskGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeTracker"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="750">
    <StackPanel>
        <StackPanel x:Name="TaskStack">
            
        </StackPanel>
        <StackPanel Orientation="Horizontal" x:Name="ButtonStack" HorizontalAlignment="left">
            <Button x:Name="AddTaskButton" Content="Add Custom Task" Click="addTaskButton_Click" Padding="3"></Button>
        </StackPanel>
    </StackPanel>

</UserControl>
